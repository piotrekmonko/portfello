type Role {
  userId: String!
  role: RoleId!
}

type User {
  id: ID!
  email: String!
  displayName: String!
}

type Query {
  roles: [Role!]!
  users: [User!]!
}

enum RoleId {
  user
  admin
  super
}

input NewUser {
  email: String!
  displayName: String!
}

type Mutation {
  userCreate(input: NewUser!): User!
  userAssignRoles(input: [String!]): [Role!]
  userGetRoles(userId: String!): [RoleId!]
}

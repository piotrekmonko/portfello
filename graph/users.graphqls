
type User {
    id: ID!
    email: String!
    displayName: String!
}

extend type Query {
    getUserRoles(userId: String!): [RoleId!]
    listUsers: [User!]!
    getUser(email: String!): User!
}

input NewUser {
    email: String!
    displayName: String!
    roles: [RoleId!]!
}

extend type Mutation {
    userCreate(newUser: NewUser!): User!
    userAssignRoles(email: String!, newRoles: [RoleId!]): [RoleId!]
}
